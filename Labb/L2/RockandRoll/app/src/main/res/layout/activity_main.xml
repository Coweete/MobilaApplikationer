<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.ag6505.staticrps.ViewerFragment"
        android:id="@+id/viewer_fragment"
        tools:layout="@layout/fragment_viewer" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.ag6505.staticrps.InputFragment"
        android:id="@+id/input_fragment"
        tools:layout="@layout/fragment_input" />
</LinearLayout>
